apiVersion: v1
kind: Pod
metadata:
  name: my-pod
spec:
  initContainers:
  - name: init-container
    image: my-init-image
    command: ["sh", "-c", "chmod 600 /opt/tls/priv-key.pem"]
    volumeMounts:
    - name: tls-secret
      mountPath: /opt/tls
      readOnly: true
  containers:
  - name: my-container
    image: my-image
    volumeMounts:
    - name: tls-secret
      mountPath: /opt/tls
      readOnly: true
  volumes:
  - name: tls-secret
    secret:
      secretName: my-tls-secret
      defaultMode: 0640
