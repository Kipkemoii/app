apiVersion: v1
kind: Service
metadata:
  name: postgres-svc
spec:
  selector:
    app: postgres
  ports:
    - name: postgres
      port: 5432
      targetPort: 5432
  type: LoadBalancer

---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: postgres
spec:
  selector:
    matchLabels:
      app: postgres
  replicas: 1
  template:
    metadata:
      labels:
        app: postgres
    spec:
      containers:
        - name: postgres
          image: docker.io/library/postgres:15-alpine
          env:
            - name: POSTGRES_HOST_SSL_CERT
              value: /opt/tls/..data/tls.crt
            - name: POSTGRES_HOST_SSL_KEY
              value: /opt/tls/..data/tls.key
            - name: POSTGRES_HOST_SSL_CA
              value: /opt/tls/..data/ca.crt
            - name: POSTGRES_HOST_SSL_MODE
              value: verify-ca
            - name: POSTGRES_DB
              value: postgres
            - name: POSTGRES_USER
              valueFrom:
                secretKeyRef:
                  key: username
                  name: pgs-secret
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  key: password
                  name: pgs-secret
            - name: POSTGRES_ALLOW_CONNECTIONS
              value: "true"
          ports:
            - name: postgres
              containerPort: 5432
          volumeMounts:
            - name: pgs-volume
              mountPath: /var/lib/postgresql/data
            - name: tls-certs
              mountPath: /opt/tls
      securityContext:
        fsGroup: 70
      volumes:
        - name: tls-certs
          secret:
            secretName: selfsigned-cert-tls
            defaultMode: 0640
  volumeClaimTemplates:
    - metadata:
        name: pgs-volume
      spec:
        accessModes: ["ReadWriteOnce"]
        storageClassName: managed-nfs-storage
        resources:
          requests:
            storage: 2Gi