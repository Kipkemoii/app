apiVersion: v1
kind: Service
metadata:
  name: pgs-svc
spec:
  selector:
    app: pgs
  ports:
    - name: pgs
      port: 5432
      targetPort: 5432
  type: LoadBalancer

---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: pgs
spec:
  selector:
    matchLabels:
      app: pgs
  replicas: 1
  template:
    metadata:
      labels:
        app: pgs
    spec:
      containers:
        - name: pgs
          image: docker.io/library/postgres:15-alpine
          args:
            - "-c"
            - "ssl=on"
            - "-c"
            - "ssl_cert_file=/opt/tls/..data/cert.pem"
            - "-c"
            - "ssl_key_file=/opt/tls/..data/priv-key.pem"
          env:
            - name: POSTGRES_DB
              value: postgres
            - name: POSTGRES_USER
              valueFrom:
                secretKeyRef:
                  key: username
                  name: pgs-secret
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  key: password
                  name: pgs-secret
          ports:
            - name: postgres
              containerPort: 5432
          volumeMounts:
            - name: pgs-volume
              mountPath: /var/lib/postgresql/data
            - name: keb-certs
              mountPath: /opt/tls
      securityContext:
        fsGroup: 70
      volumes:
        - name: keb-certs
          secret:
            secretName: keb-tls
            defaultMode: 0640
  volumeClaimTemplates:
    - metadata:
        name: pgs-volume
      spec:
        accessModes: ["ReadWriteOnce"]
        storageClassName: managed-nfs-storage
        resources:
          requests:
            storage: 2Gi