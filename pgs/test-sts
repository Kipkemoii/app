apiVersion: v1
kind: Service
metadata:
  name: postgres-svc
spec:
  selector:
    app: postgres
  ports:
    - name: postgres
      port: 5432
      targetPort: 5432
  type: LoadBalancer

---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: postgres
spec:
  selector:
    matchLabels:
      app: postgres
  replicas: 1
  template:
    metadata:
      labels:
        app: postgres
    spec:
      containers:
        - name: pgs
          image: docker.io/library/postgres:15-alpine
          env:
            - name: POSTGRES_USER
              valueFrom:
                secretKeyRef:
                  key: username
                  name: pgs-secret
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  key: password
                  name: pgs-secret
            - name: POSTGRES_ALLOW_CONNECTIONS
              value: "true"
          # args: ["-c", "ssl=on", "-c", "ssl_cert_file=/opt/tls/tls.crt", "-c", "ssl_key_file=/opt/tls/tls.key", "-c", "ssl_ca_file=/opt/tls/ca.crt"]
          ports:
            - name: postgres
              containerPort: 5432
          volumeMounts:
            - name: pgs-volume
              mountPath: /var/lib/postgresql/data
            - name: tls-certs
              mountPath: /opt/tls
      volumes:
        - name: tls-certs
          secret:
            secretName: selfsigned-cert-tls
            defaultMode: 0600
  volumeClaimTemplates:
    - metadata:
        name: pgs-volume
      spec:
        accessModes: ["ReadWriteOnce"]
        storageClassName: managed-nfs-storage
        resources:
          requests:
            storage: 2Gi