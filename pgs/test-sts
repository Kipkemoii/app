apiVersion: v1
kind: Service
metadata:
  name: pgs
spec:
  selector:
    app: pgs
  ports:
    - name: postgres
      port: 5432
      targetPort: 5432
  type: ClusterIP

---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: pgs
spec:
  selector:
    matchLabels:
      app: pgs
  replicas: 2
  template:
    metadata:
      labels:
        app: pgs
    spec:
      initContainers:
  - name: adjust-permissions
    image: busybox
    command: ["sh", "-c", "chmod 644 /opt/tls/cert.pem"]
    volumeMounts:
      - name: cert-volume
        mountPath: /opt/tls
      containers:
        - name: pgs
          image: docker.io/library/postgres:15-alpine
          env:
            - name: POSTGRES_USER
              valueFrom:
                configMapKeyRef:
                  key: username
                  name: pgs-config-map
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  key: password
                  name: pgs-secret
          ports:
            - name: postgres
              containerPort: 5432
          volumeMounts:
            - name: pgs-volume
              mountPath: /var/lib/postgresql/data
            - name: pgs-config
              mountPath: pg_hba.conf
              readOnly: false
            - name: tls-certs
              mountPath: /opt/tls
              readOnly: false
      volumes:
        - name: pgs-config
          configMap:
            name: pgs-config-map
            defaultMode: 0640
            items:
              - key: postgresql.conf
                path: postgresql.conf
              - key: pg_hba.conf
                path: pg_hba.conf
        - name: tls-certs
          secret:
            secretName: beren-tls
            defaultMode: 0600
        - name: pgs-volume
          persistentVolumeClaim:
            claimName: pgs-pvc
