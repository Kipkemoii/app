apiVersion: v1
kind: Service
metadata:
  name: pgs
spec:
  selector:
    app: pgs
  ports:
    - name: postgres
      port: 5432
      targetPort: 5432
  type: LoadBalancer

---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: pgs
spec:
  selector:
    matchLabels:
      app: pgs
  replicas: 1
  template:
    metadata:
      labels:
        app: pgs
    spec:
      containers:
        - name: pgs
          image: docker.io/library/postgres:15-alpine
          securityContext:
            runAsUser: 70
          env:
            - name: POSTGRES_USER
              valueFrom:
                secretKeyRef:
                  key: username
                  name: pgs-secret
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  key: password
                  name: pgs-secret
          args: ["-c", "ssl=on", "-c", "ssl_cert_file=/opt/tls/tls.crt", "-c", "ssl_key_file=/opt/tls/tls.key"]
          ports:
            - name: postgres
              containerPort: 5432
          volumeMounts:
            - name: pgs-volume
              mountPath: /var/lib/postgresql/data
            - name: tls-certs
              mountPath: /opt/tls
      volumes:
        - name: tls-certs
          secret:
            secretName: selfsigned-cert-tls
            defaultMode: 0600
  volumeClaimTemplates:
    - metadata:
        name: pgs-volume
      spec:
        accessModes: ["ReadWriteOnce"]
        storageClassName: managed-nfs-storage
        resources:
          requests:
            storage: 2Gi